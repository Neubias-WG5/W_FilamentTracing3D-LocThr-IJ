{
  "command-line": "python wrapper.py CYTOMINE_HOST CYTOMINE_PUBLIC_KEY CYTOMINE_PRIVATE_KEY CYTOMINE_ID_PROJECT CYTOMINE_ID_SOFTWARE METRICS_GATING_DIST ",
  "inputs": [
    {
      "name": "Cytomine host",
      "description": "Cytomine server hostname",
      "set-by-server": true,
      "value-key": "@ID",
      "optional": false,
      "id": "cytomine_host",
      "type": "String",
      "command-line-flag": "--@id"
    },
    {
      "name": "Cytomine public key",
      "description": "Cytomine public key",
      "set-by-server": true,
      "value-key": "@ID",
      "optional": false,
      "id": "cytomine_public_key",
      "type": "String",
      "command-line-flag": "--@id"
    },
    {
      "name": "Cytomine private key",
      "description": "Cytomine private key",
      "set-by-server": true,
      "value-key": "@ID",
      "optional": false,
      "id": "cytomine_private_key",
      "type": "String",
      "command-line-flag": "--@id"
    },
    {
      "name": "Cytomine project id",
      "description": "Cytomine project id",
      "set-by-server": true,
      "value-key": "@ID",
      "optional": false,
      "id": "cytomine_id_project",
      "type": "Number",
      "command-line-flag": "--@id"
    },
    {
      "name": "Cytomine software id",
      "description": "Cytomine software id",
      "set-by-server": true,
      "value-key": "@ID",
      "optional": false,
      "id": "cytomine_id_software",
      "type": "Number",
      "command-line-flag": "--@id"
    },
    {
      "default-value": 0.75,
      "name": "gblur",
      "description": "Gaussian blur radius",
      "set-by-server": false,
      "value-key": "@ID",
      "optional": true,
      "id": "gblur",
      "type": "Number",
      "command-line-flag": "--@id"
    }
    ,
    {
      "default-value": 15,
      "name": "rad",
      "description": "Radius used to compute local mean",
      "set-by-server": false,
      "value-key": "@ID",
      "optional": true,
      "id": "rad",
      "type": "Number",
      "command-line-flag": "--@id"
    }
	,
    {
      "default-value": -15,
      "name": "thr",
      "description": "Intensity offset to detect object pixel",
      "set-by-server": false,
      "value-key": "@ID",
      "optional": true,
      "id": "thr",
      "type": "Number",
      "command-line-flag": "--@id"
    }
  ],
  "name": "FilamentTracing3D-LocThr-IJ",
  "description": "A software for filament tracing in 3D images",
  "schema-version": "cytomine-0.1",
  "container-image": {
    "image": "neubiaswg5/w_filamenttracing3d_locthr_ij",
    "type": "singularity"
  }
}
